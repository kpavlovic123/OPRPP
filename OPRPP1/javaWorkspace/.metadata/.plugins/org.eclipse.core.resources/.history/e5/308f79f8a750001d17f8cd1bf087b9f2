package hr.fer.oprpp1.custom.collections;

import java.util.NoSuchElementException;

public class ArrayIndexedCollection implements Collection  {
	private int size = 0;
	private Object[] elements;
	
	public ArrayIndexedCollection () {
		this.elements = new Object[16];
	};
	public ArrayIndexedCollection (int initialCapacity) {
		if(initialCapacity < 1) {
			throw new IllegalArgumentException("Capacity less than 1.");
		}
		this.elements = new Object[initialCapacity];
	};
	public ArrayIndexedCollection (Collection col) {
		this();
		if(col == null) {
			throw new NullPointerException("Given collection is a null reference");
		}
		this.addAll(col);
	};
	public ArrayIndexedCollection(Collection col,int initialCapacity) {
		this(initialCapacity);
		if(col == null) {
			throw new NullPointerException("Given collection is a null reference");
		}
		if (col.size() > initialCapacity) {
			elements = new Object[col.size()];
		}
		this.addAll(col);
	};
	
	public boolean isEmpty() {
		if(this.size == 0) {
			return true;
		}
		return false;
	};
	
	public int size() {
		return this.size;
	};
	
	public void add(Object value) {
		if (value == null) {
			throw new NullPointerException("Given object is a null reference");
		}
		if(elements.length <= this.size) {
			Object[] elementsTmp = elements;
			elements = new Object[elements.length*2];
			for (int i = 0;i<elementsTmp.length;i++) {
				elements[i]=elementsTmp[i];
			}
		}
		elements[size++]=value;
	};
	
	public boolean contains(Object value) {
		for(final var e : elements) {
			if(e.equals(value))
				return true;
		}
		return false;
	};
	
	public boolean remove(Object value) {
		for(int i = 0;i<elements.length;i++) {
			if(value.equals(elements[i])) {
				elements[i]=null;
				this.size--;
				for(int j = i+1;j<elements.length;j++) {
					elements[j-1]=elements[j];
				}
				return true;
			}
		}
		return false;
	};
	
	public Object[] toArray() {
		Object[] a = new Object[size];
		for(int i = 0;i<this.size;i++) {
			a[i] = elements[i];
		}
		return a;
	};
	
	public void forEach(Processor processor) {
		for(int i = 0;i<this.size;i++) {
			processor.process(elements[i]);
		}
	};
	
	public void clear(){
		for(int i = 0;i>size;i++) {
			elements[i]=null;
		}
		size = 0;
	};
	
	public Object get(int index) {
		if(index < 0 || index >= size)
			throw new IndexOutOfBoundsException("Index out of bound.");
		return elements[index];
	};
	
	public void insert(Object value,int position) {
		if(position < 0 || position > size){
			throw new IndexOutOfBoundsException("Index out of bound.");
		}
		if (size == position) {
			this.add(value);
			return;
		}
		Object[] tmp;
		if(size+1 > elements.length)
			tmp = new Object[elements.length*2];
		else
			tmp = new Object[elements.length];
		for(int i = 0;i<size;i++) {
			if(i == position) {
				tmp[position] = value;
				for(int j = position;j<size;j++) {
					tmp[j+1] = elements[j];
				}
				size++;
				elements = tmp;
				return;
			}
			tmp[i] = elements[i];
		}
		size++;
		elements = tmp;
	};
	public int indexOf(Object value) {
		if (value == null)
				return -1;
		for(int i = 0;i<size;i++) {
			if(value.equals(elements[i]))
				return i;
		}
		return -1;
	};
	
	public void remove (int index) {
		if (index < 0 || index >= size)
			throw new IndexOutOfBoundsException("Index out of bounds.");
		elements[index]=null;
			for (int j = index+1;j<size;j++) {
				elements[j-1]=elements[j];
			}
			size--;
	};
	
	private static class ElementsGetter{
		private ElementsGetter (ArrayIndexedCollection col){
			this.col = col;
			this.n = 0;
		};
		private int n;
		private ArrayIndexedCollection col;
		public boolean hasNext() {
			return n == col.size ? true : false;
		};
		public Object getNext() {
			if(this.hasNext()) {
				return col.elements[n++];
			}
			throw new NoSuchElementException("No such element.");
		};
	}
	
	public Object createElementsGetter() {
		return new ArrayIndexedCollection.ElementsGetter(this);
	};
	
}













